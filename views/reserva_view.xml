<odoo>
    <record id="uposports_reserva_form_view" model="ir.ui.view">
        <field name="name">uposports.reserva.form</field>
        <field name="model">uposports.reserva</field>
        <field name="arch" type="xml">
            <form string="Reserva">
                <sheet layout="auto">
                    <h2>Introduzca los datos de la reserva a crear:</h2>
                    <group>
                        <group>
                            <field name="id_reserva"/>
                        </group>
                        <group>
                            <field name="freserva" position="attributes">
                             <attribute name="t-options">{"format": "dd / MM / yyyy"}</attribute>
                             </field>
                            <field name="horaInicio" />
                            <field name="horaFin" />
                        </group>
                    </group>
                    <p>
                        <i>Nota: Los campos sombreados en color son obligatorios</i>
                    </p>
                </sheet>
            </form>
        </field>
    </record>
    <record id="uposports_reserva_tree_view" model="ir.ui.view">
        <field name="name">uposports.reserva.tree</field>
        <field name="model">uposports.reserva</field>
        <field name="arch" type="xml">
            <tree string="tree_string">
                <field name="id_reserva" />
                <field name="freserva" />
                <field name="horaInicio" />
                <field name="horaFin" />
                <!--<field name="classes_ids" widget="many2many" />-->
            </tree>
        </field>
    </record>

    <record id="reserva_list_action" model="ir.actions.act_window">
        <field name="name">Reserva</field>
        <field name="res_model">uposports.reserva</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Crea la primera reserva</p>
        </field>
    </record>
</odoo>